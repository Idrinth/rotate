<Interface xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Windows>
    	<Window name="RotationAnchor" savesettings="true">
            <Size>
                <AbsPoint x="20" y="20" />
            </Size>
            <Anchors>
                <Anchor point="topleft" relativePoint="topleft" relativeTo="Root"/>
            </Anchors>
            <Windows/>
    	</Window>
    	<Window name="RotationAbilityTemplate" handleinput="true">
            <Size>
                <AbsPoint x="175" y="30" />
            </Size>
    		<Windows>
		    	<Label name="$parentAbility" font="font_default_text_small" maxchars="64" textalign="left">
                    <Size>
                        <AbsPoint x="100" y="30" />
                    </Size>
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="0" y="6" />
                        </Anchor>
                    </Anchors>
				</Label>
                <Button name="$parentGroup" inherits="EA_Button_DefaultCheckBox">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="100" y="0" />
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsPoint x="22" y="22" />
                    </Size>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="Rotation.SwitchMode" />
                    </EventHandlers>
                </Button>
                <Button name="$parentStart" inherits="EA_Button_Default" font="font_default_text_small" textalign="center" handleinput="true">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="125" y="-4" />
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsPoint x="50" y="30" />
                    </Size>
                    <TextColors>
                        <Normal r="255" g="255" b="255" a="255" />
                    </TextColors>
                    <EventHandlers>
                        <EventHandler event="OnLButtonUp" function="Rotation.OnStart" />
                    </EventHandlers>
                </Button>
                <Button name="$parentStop" inherits="EA_Button_Default" font="font_default_text_small" textalign="center" handleinput="true">
                    <Anchors>
                        <Anchor point="topleft" relativePoint="topleft" relativeTo="$parent">
                            <AbsPoint x="125" y="-4" />
                        </Anchor>
                    </Anchors>
                    <Size>
                        <AbsPoint x="50" y="30" />
                    </Size>
                    <TextColors>
                        <Normal r="255" g="255" b="255" a="255" />
                    </TextColors>
                    <EventHandlers>
                    	<EventHandler event="OnLButtonUp" function="Rotation.OnStop" />
                    </EventHandlers>
                </Button>
    		</Windows>
    	</Window>
    </Windows>
</Interface>